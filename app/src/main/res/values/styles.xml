<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorSecondary">?attr/colorPrimaryDark</item>
    </style>


    <style name="OpenSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/_ProximaNova_Regular</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_dropdown</item>
    </style>


    <!-- SplashScreen style -->
    <style name="Splashscreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="teacher">

        <item name="android:textSize">
            32sp
        </item>

        <item name="android:textColor">
            #384F7D
        </item>

    </style>
